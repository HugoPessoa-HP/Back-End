generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Pesquisador {
  id         Int       @id @default(autoincrement())
  cpf        String
  email      String
  nome       String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())
  password   String

  @@map("pesquisadores")
}

model Estado {
  id          BigInt       @id @default(autoincrement())
  nome_Estado String
  created_at  DateTime? @default(now())
  updated_at  DateTime? @default(now())
  cidade      Cidade[]

  @@map("estados")
}

model Cidade {
  id          BigInt       @id @default(autoincrement())
  nome_Cidade String
  created_at  DateTime? @default(now())
  updated_at  DateTime? @default(now())
  estado_id   BigInt
  estado      Estado    @relation(fields: [estado_id], references: [id])
  parque      Parque[]

  @@index([estado_id], map: "cidades_estado_id_fkey")
  @@map("cidades")
}

model Parque {
  id          BigInt       @id @default(autoincrement())
  nome_Parque String
  created_at  DateTime? @default(now())
  updated_at  DateTime? @default(now())
  cidade_id   BigInt
  cidade      Cidade    @relation(fields: [cidade_id], references: [id])
  trilha      Trilha[]

  @@index([cidade_id], map: "parques_cidade_id_fkey")
  @@map("parques")
}

model Trilha {
  id          BigInt       @id @default(autoincrement())
  nome_Trilha String
  referencia1 String
  referencia2 String
  created_at  DateTime? @default(now())
  updated_at  DateTime? @default(now())
  parque_id   BigInt
  parque      Parque    @relation(fields: [parque_id], references: [id])

  @@map("trilhas")
}

model Planta {
  id              BigInt    @id @default(autoincrement())
  vernaculo1      String
  vernaculo2      String
  vernaculo3      String
  nome_Cientifico String
  familia         String
  origem          String
  habito          String
  banner          String
  categoria       String

  @@map("plantas")
}

model Class01 {
  id      BigInt     @id @default(autoincrement())
  class   String   
  info    String
}
model Class02 {
  id      BigInt     @id @default(autoincrement())
  class   String
  info    String
}

model Class03 {
  id      BigInt     @id @default(autoincrement())
  class   String
  info    String
} 

model Class04 {
  id      BigInt     @id @default(autoincrement())
  class   String
  info    String
}